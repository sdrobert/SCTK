SHELL = /bin/sh
PREFIX=
bindir = $(PREFIX)/bin
T = test_suite

all: rttmValidator.pl

rttmValidator.pl:
	chmod +x rttmValidator.pl

setTests: all
	@perl RttmValidatorTests.pl -i $(T) -w

check: all
	@echo "Testing rttmValidator.pl"
	@perl RttmValidatorTests.pl -i $(T)
	@echo "   rttmValidator.pl tests successfully completed"


install: all
	cp rttmValidator.pl $(DESTDIR)$(bindir)

clean:

distclean: clean
	$(RM) -r *~ makefile
