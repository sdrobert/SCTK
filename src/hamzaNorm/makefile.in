# **********************************************************
# Makefile for rfilter1 Directory
# **********************************************************
SHELL = /bin/sh
PREFIX=
bindir = $(PREFIX)/bin
T=../test_suite

all: hamzaNorm.pl

hamzaNorm.pl: 
	chmod +x hamzaNorm.pl

setTests:
	@perl HamzaNormTests.pl -i $(T) -w

check: all
	@echo "Testing hamzaNorm.pl"
	@perl HamzaNormTests.pl -i $(T)
	@echo "   hamzaNorm.pl tests successfully completed"

install: all
	cp hamzaNorm.pl $(DESTDIR)$(bindir)

clean:

distclean: clean
	$(RM) -r *~ makefile
