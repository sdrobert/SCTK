# **********************************************************
# Makefile for slatreport Directory
# **********************************************************
MAKE=make
PREFIX=../..
bindir=$(PREFIX)/bin
T=../test_suite

all: slatreport.pl

slatreport.pl: 
	chmod +x slatreport.pl

config:
	@echo -n " Checking gnuplot... "
	@if [ "`which gnuplot | egrep '^/'`" = "" ] ; then \
		echo "not found"; \
	else \
		echo `which gnuplot`; \
	fi

setTests: all
	@perl slatTest.pl -i $(T) -s

check: all
	@echo "Testing slatreport.pl"
	@perl slatTest.pl -i $(T)
	@echo "   slatreport.pl tests successfully completed"

install: all
	cp slatreport.pl $(DESTDIR)$(bindir)

clean:

distclean: clean
	$(RM) -r *~ makefile
