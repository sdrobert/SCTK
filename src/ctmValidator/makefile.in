SHELL = /bin/sh
PREFIX=
bindir = $(PREFIX)/bin
T = test_suite

all: ctmValidator.pl

ctmValidator.pl:
	chmod +x ctmValidator.pl

setTests:
	@perl CtmValidatorTests.pl -i $(T) -w

check: all
	@echo "Testing ctmValidator.pl"
	@perl CtmValidatorTests.pl -i $(T)
	@echo "   ctmValidator.pl tests successfully completed"

install: all
	cp ctmValidator.pl $(DESTDIR)$(bindir)

clean:

distclean: clean
	$(RM) -r *~ makefile
