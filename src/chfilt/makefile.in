# **********************************************************
# Makefile for rfilter1 Directory
# **********************************************************
SHELL = /bin/sh
PREFIX=
bindir = $(PREFIX)/bin
T=../test_suite

all: chfilt.pl

chfilt.pl: 
	chmod +x chfilt.pl

setTests: all
	@perl ChfiltTests.pl -i $(T) -h ../hubscr/hubscr.pl -w

check: all
	@echo "Testing chfilt.pl"
	@perl ChfiltTests.pl -i $(T) -h ../hubscr/hubscr.pl
	@echo "   chfilt.pl tests successfully completed"

install: all
	cp chfilt.pl $(DESTDIR)$(bindir)

clean:

distclean: clean
	$(RM) -r *~ makefile
